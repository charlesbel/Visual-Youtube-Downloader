<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Download YouTube video</title>
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.css" rel="stylesheet">
    <style>
        .formSmall {
            width: 700px;
            margin: 20px auto 20px auto;
        }
    </style>

</head>
<body>
    <div class="container">
        <form method="post" action="" class="formSmall">
            <div class="row">
                <div class="col-lg-12">
                    <h7 class="text-align">Download YouTube Video</h7>
                </div>
                <div class="col-lg-12">
                    <div class="input-group">
                        <input type="text" class="form-control" name="videoLink" placeholder="Paste link">
                        <span class="input-group-btn">
                        <button type="submit" name="submit" id="submit" class="btn btn-primary">Go!</button>
                      </span>
                    </div><!-- /input-group -->
                </div>
            </div><!-- .row -->
        </form>

        <% if (typeof error !== 'undefined') { %>
          <div style="color:red;font-weight: bold;text-align: center"><%= error %></div>
        <% } %>

        <% if (typeof downloadLinks !== 'undefined') { %>
        <div class="row formSmall">
            <div class="col-lg-3">
                <img src="<%= thumbnail %>">
            </div>
            <div class="col-lg-9">
                <%= title %>
            </div>
        </div>

        <table class="table formSmall">
            <tr>
                <td>Type</td>
                <td>Quality</td>
                <td>Size</td>
                <td>Download</td>
            </tr>
            <% for (var i = 0; i < downloadLinks.length; i++) { %>
                <tr>
                    <td><%= downloadLinks[i]['type'] %></td>
                    <td><%= downloadLinks[i]['quality'] %></td>
                    <td><%= downloadLinks[i]['size'] %></td>
                    <td><a href="<%= downloadLinks[i]['link'] %>">Download</a> </td>
                </tr>
            <% } %>
        </table>
        <% } %>
    </div>
</body>
</html>